<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<!--Shadow-->
	<item>
		<shape>
			<corners
				android:topLeftRadius="@dimen/toggle_button_radius"
				android:bottomRightRadius="@dimen/toggle_button_radius"
				/>
			<solid android:color="@android:color/transparent"/>
			<stroke android:width="@dimen/toggle_button_stroke_width"
				android:color="@color/toggle_button_outer_shadow"/>
		</shape>
	</item>

	<!--Button-->
	<item
		android:left="1px"
		android:top="0px"
		android:bottom="1px"
		android:right="1px"
		>

		<shape>

			<gradient
				android:startColor="@color/toggle_button_1"
				android:endColor="@color/toggle_button_2"
				android:angle="270"/>
			<stroke android:width="@dimen/default_stroke_width"
				android:color="@color/toggle_button_inside_stroke"/>
			<corners
				android:topLeftRadius="@dimen/toggle_button_radius"
				android:bottomRightRadius="@dimen/toggle_button_radius"
				/>
			<padding
				android:left="@dimen/toggle_button_padding_left"
				android:right="@dimen/toggle_button_padding_right"
				android:top="@dimen/toggle_button_padding_top"
				android:bottom="@dimen/toggle_button_padding_bottom"
				/>
			<size android:height="@dimen/blue_button_height"/>
		</shape>
	</item>

	<!--Inner shadow-->
